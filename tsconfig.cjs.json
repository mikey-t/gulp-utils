{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "outDir": "./dist/cjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ES2018",
      "ES2021.String"
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    ".vscode",
    "coverage",
    "dist",
    "node_modules",
    "test"
  ]
}
